<!--test for autonomus run-->
<launch>
	<node pkg="ts_map_server" type="ts_map_server" name="ts_map_server" args="/home/keitaro/ros_map/kiseki_kounai/kiseki_kounai_changed.pgm" output="screen"/>
<!--	<node pkg="rviz" type="rviz" name="rviz"/>-->
	<node pkg="urg_node" type="urg_node" name="urg_node">
		<param name="ip_address" value="192.168.0.10"/>
		<param name="publish_multiecho" value="false"/>
	</node>
	<node pkg="tiny_drivers" type="tiny_node" name="tiny_node">
		<param name="max_speed" value="0.4" />
		<param name="max_rotvel" value="0.3" />
	</node>
	<node pkg="localization" type="odometry" name="odometry" />
<!--	<node pkg="tf_laser_publisher" type="tf_laser_publisher" name="laser2base" />-->
	<node pkg="tf" type="static_transform_publisher" name="tf_laser" args="0.075 0 0 0 0 0 /base_link /laser 40" />
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<!-- Publish scans from best pose at a max of 10 Hz -->
		<param name="odom_model_type" value="diff"/>
<!--		<param name="odom_alpha5" value="0.1"/>-->
		<param name="transform_tolerance" value="0.5" />
		<param name="gui_publish_rate" value="8.0"/>
		<param name="laser_max_beams" value="30"/>
		<param name="min_particles" value="500"/>
		<param name="max_particles" value="5000"/>
		<param name="kld_err" value="0.05"/>
		<param name="kld_z" value="0.99"/>
		<param name="odom_alpha1" value="0.2"/>
		<param name="odom_alpha2" value="0.2"/>
		<!-- translation std dev, m -->
		<param name="odom_alpha3" value="0.8"/>
		<param name="odom_alpha4" value="0.2"/>
		<param name="laser_z_hit" value="0.5"/>
		<param name="laser_z_short" value="0.05"/>
		<param name="laser_z_max" value="0.05"/>
		<param name="laser_z_rand" value="0.5"/>
		<param name="laser_sigma_hit" value="0.2"/>
		<param name="laser_lambda_short" value="0.1"/>
		<param name="laser_model_type" value="likelihood_field"/>
<!--		<param name="laser_model_type" value="beam"/> -->
		<param name="laser_likelihood_max_dist" value="2.0"/>
		<param name="update_min_d" value="0.2"/>
		<param name="update_min_a" value="0.5"/>
		<param name="odom_frame_id" value="odom"/>
		<param name="resample_interval" value="1"/>
		<param name="transform_tolerance" value="0.1"/>
		<param name="recovery_alpha_slow" value="0.0"/>
		<param name="recovery_alpha_fast" value="0.0"/>
	</node>
	<node pkg="move_base" type="move_base" respawn="false" name="move_base">
		<remap from="cmd_vel" to="cmd_vels" />
		<param name="base_global_planner" value="global_planner/GlobalPlanner"/>
		<param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
		<rosparam file="$(find ts_launch)/yaml/auto/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find ts_launch)/yaml/auto/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find ts_launch)/yaml/auto/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find ts_launch)/yaml/auto/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find ts_launch)/yaml/auto/global_planner_params.yaml" command="load" />
		<rosparam file="$(find ts_launch)/yaml/auto/dwa_local_planner_params.yaml" command="load" />
	</node>
	<node pkg="ts_waypoint_server" type="ts_waypoint_server" name="ts_waypoint_server" args="/home/keitaro/ros_map/kiseki_kounai/kiseki_kounai_changed.wp" output="screen"/>
	<node pkg="amcl_path_plotter" type="amcl_path_plotter_node" name="amcl_path_plotter" />
</launch>
